<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr> 
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "Show", book_path(book) %>
				<%= link_to "Edit", edit_book_path(book) %>
				<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<p></p>

<h2>New Book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <p></p>
 
    <%= f.submit 'Create Book' %>
 
<% end %>